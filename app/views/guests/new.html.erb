<main role="main">
  <div class="container">
    <%= form_with model: @guest do |f| %>
      <% if @guest.errors.any? %>
        <%= render partial: 'shared/model_errors', locals: { model: @guest } %>
      <% end %>

      <div class="form-group">
        <%= f.label :name, "Name", class: "control-label col-md-8" %>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name"  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name, "Email", class: "control-label col-md-8" %>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Email"  %>
        </div>
      </div>

      <div class="form-group col-md-8">
        <%= f.label :name, "Attending", class: "control-label" %>
        <%= f.radio_button :attending, class: "form-control"  %>
      </div>

      <div class="form-group col-md-8">
        <%= f.label :name, "Not Attending", class: "control-label" %>
        <%= f.radio_button :attending, class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :comments, "Comments", class: "control-label col-md-8" %>
        <div class="col-md-8">
          <%= f.text_area :comments, class: "form-control"  %>
        </div>
      </div>
      <div class="col-md-8">
        <%= f.submit class: "btn btn-primary"  %>
      </div>
    <% end %>
  </div>
</main>
